{
    "compilerOptions": {
        "experimentalDecorators": true,
        "types": ["node"],
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "target": "es2017",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["src/*"],
    "exclude": ["node_modules", "dist"]
}
